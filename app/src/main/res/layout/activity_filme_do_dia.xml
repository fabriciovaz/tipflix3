<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".activities.FilmeDoDiaActivity"
    >


    <RelativeLayout
        android:id="@+id/q1"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/youtubeplayerfragment"
        tools:ignore="NotSibling"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="23dp"
            android:text="Dica do Dia!"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp" />

        <TextView
            android:id="@+id/dataatual"
            android:layout_width="106dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/textView"
            android:layout_below="@+id/textView"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"


            android:textStyle="italic"
            android:layout_alignRight="@+id/textView"
            android:gravity="end" />

        <TextView
            android:id="@+id/textoNovaFrase"
            android:layout_width="327dp"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="textStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:gravity="start" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/domeio"
        android:layout_width="match_parent"
        android:layout_height="304dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/q1"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true">

        <fragment
            android:id="@+id/youtubeplayerfragment"
            android:name="com.google.android.youtube.player.YouTubePlayerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:layout_alignParentLeft="true" />


    </LinearLayout>







</RelativeLayout>
